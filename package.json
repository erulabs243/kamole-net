		"@lucide/svelte": "^0.515.0",
		"@pandacss/dev": "^0.54.0",
		"@prettier/plugin-oxc": "^0.0.4",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-netlify": "^5.0.2",
		"@sveltejs/enhanced-img": "^0.6.1",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"commitizen": "^4.3.1",
